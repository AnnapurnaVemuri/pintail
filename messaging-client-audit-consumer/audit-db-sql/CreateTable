CREATE TABLE audit
(
  TIMEINTERVAL bigint,
  HOSTNAME varchar(50),
  TIER varchar(15),
  TOPIC varchar(25),
  CLUSTER varchar(50),
  SENT bigint,
  C0 bigint,
  C1 bigint,
  C2 bigint,
  C3 bigint,
  C4 bigint,
  C5 bigint,
  C6 bigint,
  C7 bigint,
  C8 bigint,
  C9 bigint,
  C10 bigint,
  C15 bigint,
  C30 bigint,
  C60 bigint,
  C120 bigint,
  C240 bigint,
  C600 bigint,
  PRIMARY KEY (TIMEINTERVAL,HOSTNAME,TIER,TOPIC,CLUSTER),
  INDEX cluster_index (CLUSTER),
  INDEX tier_index (TIER),
  INDEX topic_index (TOPIC),
  INDEX host_index (HOSTNAME),
  INDEX time_index (TIMEINTERVAL)
)